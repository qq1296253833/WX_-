<view class="rate-group">
  <view class="rate-image-group">
    <image style="width:{{starSize}}rpx;height:{{starSize}}rpx" wx:for="{{lights}}" wx:key="*this" class="rate-image"
      src="/images/icons/stars/star-small.png"></image>
    <image style="width:{{starSize}}rpx;height:{{starSize}}rpx" wx:for="{{halfs}}" wx:key="*this" class="rate-image"
      src="/images/icons/stars/star-small-half.png"></image>
    <image style="width:{{starSize}}rpx;height:{{starSize}}rpx" wx:for="{{grays}}" wx:key="*this" class="rate-image"
      src="/images/icons/stars/star-small-empty.png"></image>
  </view>

  <text style="font-size:{{fontSize}}rpx;color:{{fontColor}}" class="rate-number">{{rateText}}</text>


</view>